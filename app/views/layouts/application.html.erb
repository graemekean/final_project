<!DOCTYPE html>
<html>
<head>
  <title>SessionMe</title>

  <!-- INSTALL BOOTSTRAP FROM CDN____________________________________________________________ -->

  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <!-- Latest compiled and minified CSS -->
  <!-- <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css" integrity="sha512-dTfge/zgoMYpP7QbHy4gWMEGsbsdZeCXz7irItjcC3sPUFtf0kuFbDz/ixG7ArTxmDjLXDmezHubeNikyKGVyQ==" crossorigin="anonymous"> -->

  <!-- STANDARD RAILS TEMPATE TAGS____________________________________________________________ -->

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

  <!-- SET UP THE MAIN NAVBAR -->

  <nav class="navbar navbar-inverse navbar-fixed-top">
    <div class="container-fluid">
      <!-- Brand and toggle get grouped for better mobile display -->
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <a class="navbar-brand" href="#">Session.Me</a>
      </div>

      <% if user_signed_in? %>

      <!-- Collect the nav links, forms, and other content for toggling -->
      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
        <ul class="nav navbar-nav">
        <li role="separator" class="divider"></li>
         <li class="dropdown">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Studio <span class="caret"></span></a>
           <ul class="dropdown-menu">
             <li><%= link_to "My Projects", studio_path(current_user.id) %> </li>
              <li> <%= link_to "All Projects", projects_path %> </li>  
             <li><%= link_to "Find Collaborators", profile_index_path %> </li>
             <li role="separator" class="divider"></li>
             <li><a href="#">Separated link</a></li>
             
           </ul>
         </li>
          <li> <%= link_to "Find People", profile_index_path %> </li>  

          <li> <%= link_to "My Activity Feed", statuses_path %> </li>  
          <li> <%= link_to "My Profile", profile_path(current_user) %> </li> 
          <li> <%= link_to "Friends", friendships_path(current_user) %> </li> 
          <li> <%= link_to "Notifications", projects_path %> </li> 
          <li> <%= link_to "Community", projects_path %> </li> 
          

        <li class="dropdown">
       <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Settings <span class="caret"></span></a>
          <ul class="dropdown-menu">
            <li><%= link_to "Edit My Profile", edit_profile_path(current_user.id) %> </li>
            <li><%= link_to "Cancel my Account", cancel_user_registration_path %> </li>


          </ul>
        </li>
      </ul>
      <% end %>

      <!-- SEARCH BOX FOR MAIN NAVBAR -->

     <!--  <form class="navbar-form navbar-left" role="search">
        <div class="form-group">
          <input type="text" class="form-control" placeholder="Search">
        </div>
        <button type="submit" class="btn btn-default">Submit</button>
      </form> -->

      <!-- RIGHT SIDE OF THE MAIN NAVBAR -->

      <ul class="nav navbar-nav navbar-right">

        <li class="dropdown">
          <% if user_signed_in? %>
          <li><%= link_to current_user.email, profile_path(current_user) %></li>
          <li role="separator" class="divider"></li>
          <li><%= link_to "Log Out", logout_path %></li>
          <% else %>
          <li><%= link_to "Register", register_path %></li>
          <li role="separator" class="divider"></li>
          <li><%= link_to "Log In", login_path %></li>
          <% end %>  
          <!-- <li role="separator" class="divider"></li> -->

        </ul>
      </li>
    </ul>
  </div><!-- /.navbar-collapse -->
</div><!-- /.container-fluid -->
</nav>




<div class="container">
  <p class="notice"><%= notice %></p>
  <p class="alert"><%= alert %></p>

  <%= yield %>
</div>

</body>
</html>
