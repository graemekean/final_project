<!-- CURRENT USER FRIEND REQUESTS -->

<% if current_user == @user %>
<div class="container"> 
  <div class="row">
      <h4 style="color:red;">You have friend requests :</h4>
      <ul>
        <% @user.requested_friendships.each do |friend| %>
        <div class="col-md-3 session-full">
        
        <% if friend.profile.profile_image? %>
          <%= link_to image_tag(friend.profile_image.thumb.url, class: "img-responsive"), @profile.profile_image.large.url %> 
        <% else %>
          <%= link_to image_tag("profiles/user-thumb.png", class: "img-responsive"), "/images/profiles/user-thumb.png" %> 
        <% end %>


          <h5><%= friend.profile.profile_name %> </h5>
          <div class="btn-toolbar">
          <%= link_to "Accept", friendship_path(:id => friend), :method => "put", :class => "btn btn-primary" %> 
          <%= link_to "Decline", friendship_path(:id => friend), :method => :delete, data: { confirm: 'Are you sure?'},:class => "btn btn-danger" %>
          </div>
        </div>
        <% end %>
      </ul>  
  </div>
</div>
<% end %>