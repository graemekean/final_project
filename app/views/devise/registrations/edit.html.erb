<div class="row">
<div class="col-md-4">
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "well"}) do |f| %>
    <%= devise_error_messages! %>

    <fieldset>
      <legend>Editing your profile</legend>

      <div class="field">
        <%= f.input :email %><br />
      </div>

      

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="field">
        <%= f.input :password %> <i>(leave blank if you don't want to change it)</i><br />
      </div>

      <div class="field">
        <%= f.input :password_confirmation %><br />
      </div>

      <div class="field">
        <%= f.input :current_password %> <i>(we need your current password to confirm your changes)</i><br />
      </div>

      <div class="actions">
        <%= f.button :submit, "Update My Profile Details" %>
      </div>


    </fieldset>
    <% end %>

    <h3>Cancel my account</h3>

    <p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

    <%= link_to "Back", :back %>
