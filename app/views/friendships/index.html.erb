<div class="page-header">
  <h1> My Friends </h1>
</div>

<h1>cycle through user friendships and return each friend</h1>

<% @friendships.each do |friendship| %>
  <% friend = friendship.friend %>
  <%= friend.email %>
  <% if friendship.pending? %>
    <em>Friendship is pending</em>
    <%= link_to "Delete request", edit_friendship_path(friendship) %>
    <%= link_to "Delete", friendship, method: :delete, data: {confirm: "Are you sure you want to reject this friendship? "}  %>
  <% end %>
<br>
  <% if friendship.requested? %>
    <em>Friendship requested</em>
    <%= link_to "Accept friendship", edit_friendship_path(friendship) %>
  <% end %>
<br>
  <% if friendship.accepted? %>
    <em>Friendship Started: <%= friendship.updated_at %>.</em>
    <%= link_to "Update friendship", edit_friendship_path(friendship) %>
  <% end %>
<% end %>