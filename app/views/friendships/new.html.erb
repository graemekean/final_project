
<% if @friend %>
<h1><%= @friend.email %></h1>

<p>Are you sure that you want to add <%= @friend.email %> to your list of friends?</p>

<% simple_form_for @friendship, method: :post do |form| %>
<div class="form form-actions">
<%= form.hidden_field :friend_id, value: @friend %>
<%= f.button :submit, "Yes, Add Friend" %>
<%= link_to "Cancel", profile_path(@friend), class: 'btn' %>
  

</div>
<% end %>

<% end %>