

<div class="container edit_user">
  <div class="col-md-6 col-md-offset-3">

    <% provide(:title, "Edit user Profile") %>
    <h1>Update your profile</h1>


    <%= simple_form_for(@profile) do |f| %>
    <%#= render 'shared/error_messages' %>
    <div class="col-md-6">

      <%= f.input :first_name %>
      <br>
      <%= f.input :last_name %>
      <br>
      <%= f.input :profile_name %>    
      <br>  
      <%= f.label :profile_image, 'Upload a profile picture of yourself:' %><br>
      <%= f.file_field :profile_image, class: "form-control" %>


      <%= f.input :youtube_url %>
      <%= f.input :soundcloud_url %>
      <%= f.input :linkedin_url %>
      


      <%= f.hidden_field :user_id, :value => current_user.id %> 
     

    </div>

    <div class="col-md-6">
      <%= f.input :about_me %>

    </div>




    



    <%= f.submit "Save changes", class: "btn btn-primary" %>
    <% end %>


  </div>
</div>
